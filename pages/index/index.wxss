/**index.wxss**/
.navbar {
    display: flex;
    border-bottom: 1px solid #eee;
}
.navbar-item {
    flex: 1.0;
    text-align: center;
    font-size: 14px;
    color: #999;
    margin-bottom: -1px;
}
.navbar-text {
    display: block;
    width: 30px;
    padding: 10px;
    margin: auto;
}
.navbar-text.active {
    border-bottom: 2px solid #384452;
    color: #384452;
    font-weight: bold;
}

.latest-item-container {
  margin-bottom: 20rpx;
}

.hidden {
    display: none;
}

.vol-meta {
  padding: 10rpx 20rpx;
  font-size: 12px;
  color: #888;
}

.vol-title {
  font-size: 14px;
  color: #1abc9c;
}

.vol-author {
  float: right;
}

.vol-content {
  margin-top: 30rpx;
  padding: 0 15rpx;
  font-size: 12px;
  line-height: 1.4;
}

.vol-content-text {
  width: 100%;
  color: #384452;
}

.play-item {
  border:1px solid #eee;
  margin:10rpx 20rpx 20rpx 20rpx;
  border-radius:20rpx;
  box-shadow:0rpx 2rpx 0rpx 1rpx;
  color:#eee;
  padding:6rpx;
}
